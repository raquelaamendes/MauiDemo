<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiDemo.Models"
             x:Class="MauiDemo.MainPage"
             BackgroundColor="White"
             Title="MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="{Binding Foto}" Aspect="Fill" />
        <VerticalStackLayout HorizontalOptions="Center">
            <Label Text="{Binding Nome}" FontSize="30" />
            <Label Text="{Binding Sobrenome}" FontSize="30" />
            <Label Text="{Binding Idade}" FontSize="30" />
        </VerticalStackLayout>
    </StackLayout>

</ContentPage>
